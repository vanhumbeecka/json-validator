# Server Configuration
PORT=3000
ROOT_PATH=..
NODE_ENV=development

# Logging Configuration
# Log level: "error", "warn", "info", "debug" (default: "info")
LOG_LEVEL=info

# Database Configuration
# Database provider: "sqlite" (default) or "dynamodb"
DB_PROVIDER=sqlite

# SQLite Configuration (used when DB_PROVIDER=sqlite)
# Path to SQLite database file
DB_PATH=data/validations.db

# DynamoDB Configuration (used when DB_PROVIDER=dynamodb)
# DynamoDB table name (required when using DynamoDB)
DYNAMODB_TABLE_NAME=
# AWS region for DynamoDB (optional, uses SDK default if not set)
AWS_REGION=us-east-1
